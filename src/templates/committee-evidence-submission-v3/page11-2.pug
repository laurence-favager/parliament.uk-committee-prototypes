extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Diversity question 2 of 3
        span.sr-only .
        span.context The advertising industry inquiry

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section
    .container
      h2 Gender identity

      +form(action='page11-3.html')
        .input-wrapper
          +fieldset('What is your gender identity?')
            +radio--checkbox('radio', 'diversity-2a', 'rdDiv2a-1', 'Prefer not to say')
            +radio--checkbox('radio', 'diversity-2a', 'rdDiv2a-2', 'Man (including trans man)')
            +radio--checkbox('radio', 'diversity-2a', 'rdDiv2a-3', 'Woman (including trans woman)')
            div(data-dropdown='holder')
              +radio--checkbox('radio', 'diversity-2a', 'rdDiv2a-4', 'Other gender identity')(data-dropdown='switch')
              .indent-cv(data-dropdown-content='hide')
                +input--text('identity', 'txtIndentity', 'Specify gender identity (optional)')

          +fieldset('Is your gender identity different from the gender you were assigned at birth?')
            +radio--checkbox__inline('radio', 'diversity-2b', 'rdDiv2b-1', 'Prefer not to say')
            +radio--checkbox__inline('radio', 'diversity-2b', 'rdDiv2b-2', 'Yes')
            +radio--checkbox__inline('radio', 'diversity-2b', 'rdDiv2b-3', 'No')

        +button('Continue', 'btn--primary btn--large-cv', 'submit')
