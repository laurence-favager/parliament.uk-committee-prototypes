            +radio--checkbox('radio', 'location', 'rdLocation9', 'South East England')
            +radio--checkbox('radio', 'location', 'rdLocation10', 'South West England')
            +radio--checkbox('radio', 'location', 'rdLocation11', 'Wales')
            +radio--checkbox('radio', 'location', 'rdLocation12', 'Scotland')
            +radio--checkbox('radio', 'location', 'rdLocation13', 'Northern Ireland')
            +radio--checkbox('radio', 'location', 'rdLocation14', 'Nationwide')
