extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Diversity question 1 of 3
        span.sr-only .
        span.context The advertising industry inquiry

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section
    .container
      +form(action='page13-2.html')
        .input-group__extended
          h2 Organisation size
          +fieldset('How many people are employed by your organisation?')
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-1', 'Prefer not to say')
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-2', '0 to 49')
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-3', '50 to 249')
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-4', 'Over 250')

        +button('Continue', 'btn--primary btn-cv', 'submit')
