extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Diversity question 1 of 3
        span.sr-only .
        span.context The advertising industry inquiry

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section.section--wide
    .container
      +form(action='page12-2.html')
        h2 Ethnic background
        +fieldset('Choose one option that best describes your ethnic group or background')
          .input-group__extended
            h3 Prefer not to say
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-1', 'Prefer not to say')
          .input-group__extended
            h3 Asian
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-2', 'Bangladeshi')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-3', 'Indian')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-4', 'Pakistani')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-5', 'Any other Asian background')
          .input-group__extended
            h3 Black
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-6', 'African')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-7', 'Caribbean')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-8', 'Any other Black background')
          .input-group__extended
            h3 Chinese
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-9', 'Any Chinese background')
          .input-group__extended
            h3 Mixed ethnic background
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-10', 'Asian and White')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-11', 'Black African and White')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-12', 'Black Caribbean and White')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-13', 'Any other mixed ethnic background')
          .input-group__extended
            h3 White
            +radio--checkbox('radio', 'diversity-1', 'rdDiv1-14', 'Any White background')
          .input-group__extended
            h3 Other ethnic background
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-15', 'Arab')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-16', 'Latin American')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-17', 'Gypsy or Irish Traveller')
            +radio--checkbox__inline('radio', 'diversity-1', 'rdDiv1-18', 'Any other ethnic background')

        +button('Continue', 'btn--primary btn-cv', 'submit')
