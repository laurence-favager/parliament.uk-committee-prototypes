extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Check your answers
        span.sr-only .
        span.context The advertising industry inquiry

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section
    .container
      h2 Your details

      ol.list--pipe
        li
          .container-cv
            h2.col-1-cv Name
            p.col-2-cv 
              i Title (optional) | First names(s) | Last name
            p.col-3-cv #[+link('', 'Change')]
        li
          .container-cv
            h2.col-1-cv Job title
            p.col-2-cv 
              i Job title (optional)
            p.col-3-cv #[+link('', 'Change')]
        li
          .container-cv
            h2.col-1-cv Email
            p.col-2-cv 
              i Email
            p.col-3-cv #[+link('', 'Change')]
        li
          .container-cv
            h2.col-1-cv Committee updates
            p.col-2-cv 
              i Yes | No
            p.col-3-cv #[+link('', 'Change')]
        li
          .container-cv
            h2.col-1-cv Inquiry updates
            p.col-2-cv 
              i Yes | No
            p.col-3-cv #[+link('', 'Change')]
        li
          .container-cv
            h2.col-1-cv Phone
            p.col-2-cv 
              i Phone (optional)
            p.col-3-cv #[+link('', 'Change')]

      h2 Your evidence

      ol.list--pipe
        li
          .container-cv
            h2.col-1-cv File
            p.col-2-cv 
              i evidence_submission.docx
            p.col-3-cv #[+link('', 'Change')]

      .section--minor
        +form('page11.html')
          +button('Send evidence', 'btn--primary btn-cv', 'submit')

  section.section--minor
    .container
      .block.accent--mint
        h2 Help and support
        p If you need help submitting evidence, email the Communications Committee (#[+link('mailto:holcommunications@parliament.uk', 'holcommunications@parliament.uk')]) or phone #[+link('tel:02072198662', '020 7219 8662')].
