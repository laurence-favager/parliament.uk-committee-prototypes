extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Check your answers
        span.sr-only .
        span.context The advertising industry inquiry

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section
    .container
      h2 Your details

      ol.list--pipe
        li
          .container-cv
            h2 Name
            p
              i Title (optional) | First names(s) | Last name
            p #[+link('', 'Change')]
        li
          .container-cv
            h2 Job title
            p 
              i Job title (optional)
            p #[+link('', 'Change')]
        li
          .container-cv
            h2 Email
            p 
              i Email
            p #[+link('', 'Change')]
        li
          .container-cv
            h2 Committee updates
            p
              i Yes | No
            p #[+link('', 'Change')]
        li
          .container-cv
            h2 Inquiry updates
            p
              i Yes | No
            p #[+link('', 'Change')]
        li
          .container-cv
            h2 Phone
            p
              i Phone (optional)
            p #[+link('', 'Change')]

      h2 Your evidence

      ol.list--pipe
        li
          .container-cv
            h2 File
            p 
              i evidence_submission.docx
            p #[+link('', 'Change')]

      .block-cv
        +buttonLink('page08.html', 'Send evidence', 'btn--primary btn-cv')

  section
    .container
      .block.accent--mint.block-cv
        h2 Help and support
        p If you need help submitting evidence, email the Communications Committee (#[+link('mailto:holcommunications@parliament.uk', 'holcommunications@parliament.uk')]) or phone #[+link('tel:02072198662', '020 7219 8662')].
