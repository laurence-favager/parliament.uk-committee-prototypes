extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Submit evidence
        span.sr-only .
        span.context The advertising industry inquiry

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section
    .container
      h2 Who are you submitting evidence for?
      +form('page02.html')(id='submitterType', data-evidence='form')
        .block--border__bottom
          +fieldset('Who are you submitting evidence for?', 'sr-only')
            ol.list--block
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'ind', 'You are submitting evidence for one person.', 'Individual')(data-route='page02.html', checked)
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'grp', 'You are submitting evidence for a group of people.', 'Group of individuals')
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'org', 'You are submitting evidence for a business or an organisation.', 'Organisation')(data-route='page03.html')
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'orgs', 'You are submitting evidence for a group of businesses or organisations.', 'Group of organisations')

        +button('Continue', 'btn--primary', 'submit')
